{
    "name": "php-helpers/php-helpers",
    "description": "PhpHelpers is a PHP Packages Framework which shares the common PHP functions",
    "license": "MIT",
    "keywords": [
        "PhpHelpers",
        "PHP Function",
        "Fraction"
    ],
    "authors": [
        {
            "name": "Can Ngo",
            "email": "ngocongcan@gmail.com",
            "homepage": "http://ngocongcan.github.io",
            "role": "Software engineer"
        }
    ],
    "require": {
        "php": ">=7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "codedungeon/phpunit-result-printer": "^0.26.1",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "PhpHelpers\\": "src",
            "PhpHelpers\\Library\\": "src/Library"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpHelpers\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "code-sniffer": "phpcs -s --standard=./resources/phpcs/",
        "code-beautifier": "phpcbf -s --standard=./resources/phpcs/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "stable"
}
